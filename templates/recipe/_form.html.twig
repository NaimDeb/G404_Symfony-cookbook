{{ form_start(recipeForm) }}
<section
	class="container mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">

	<!-- Titre + Bouton Retour -->
	<div class="flex justify-between items-center mb-6">
		<h1 class="text-3xl font-semibold text-green-700">
			{{ title }}
		</h1>
		<a href="{{ path('app_recipe_index') }}" class="text-white bg-green-600 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 text-sm font-medium rounded-full px-5 py-2.5">
			Retour
		</a>
	</div>

	<div
		class="space-y-6">
		<!-- Nom de la recette -->
		<div>
			{{ form_label(recipeForm.name, 'Nom de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500'}}
				) }}
			</div>
			{{ form_errors(recipeForm.name, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Catégorie améliorée -->
		<div>
			{{ form_label(recipeForm.categories, 'Catégorie de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.categories, {'attr': {'class': 'flex flex-wrap gap-4'}}
				) }}
			</div>
			{{ form_errors(recipeForm.categories, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>


		<!-- Slug -->
		<div>
			{{ form_label(recipeForm.slug, 'Slug de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.slug, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500'}}
				) }}
			</div>
			{{ form_errors(recipeForm.slug, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Description -->
		<div>
			{{ form_label(recipeForm.description, 'Description de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500'}}
				) }}
			</div>
			{{ form_errors(recipeForm.description, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Bouton de soumission -->
		<div class="mt-6 text-center">
			<button class="w-full py-3 px-6 bg-green-600 text-white font-semibold rounded-lg shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">
				{{ button_label|default('Créer') }}
			</button>
		</div>
	</div>

</section>
{{ form_end(recipeForm) }}
