{{ form_start(recipeForm) }}
<section class="container mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">

	<h1 class="text-3xl font-semibold text-center text-blue-700 mb-6"> {{ title }} </h1>

		{{ form_start(recipeForm, {
        'attr': {
            'id': 'recipeForm',
            'class': 'space-y-6'
        }
    }) }}

		<!-- Nom de la recette -->
		<div class="mb-4">
			{{ form_label(recipeForm.name, 'Nom de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}
				) }}
			</div>
			{{ form_errors(recipeForm.name, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Catégorie -->
		<div class="mb-4">
			{{ form_label(recipeForm.categories, 'Catégorie de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.categories, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}
				) }}
			</div>
			{{ form_errors(recipeForm.categories, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Slug -->
		<div class="mb-4">
			{{ form_label(recipeForm.slug, 'Slug de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.slug, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}
				) }}
			</div>
			{{ form_errors(recipeForm.slug, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>

		<!-- Description -->
		<div class="mb-4">
			{{ form_label(recipeForm.description, 'Description de la recette :', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}
			) }}
			<div class="mt-2">
				{{ form_widget(recipeForm.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}
				) }}
			</div>
			{{ form_errors(recipeForm.description, {'attr': {'class': 'text-sm text-red-500 mt-1'}}
			) }}
		</div>


		<!-- Bouton de soumission -->
		<div class="mt-6 text-center">
			<button class="w-full py-3 px-6 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
				{{ button_label|default('Créer') }}
			</button>
		</div>


	</section>

	{{ form_end(recipeForm) }}
