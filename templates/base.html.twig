<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>

		<header class="bg-white shadow-md">
			<div
				class="container mx-auto flex justify-between items-center p-4">
				<!-- Logo -->
				<a href="{{ path('app_home') }}" class="text-2xl font-bold text-green-600">
					üç≥ MyCookingApp
				</a>

				<!-- Navigation -->
				<nav class="space-x-6">
					<a href="{{ path('app_recipe_index') }}" class="text-gray-700 hover:text-green-600">
						Recipes
					</a>
				</nav>

				<!-- Authentication -->
				<div>
					{% if app.user %}
						<span class="text-gray-700">
							Welcome,
							{{ app.user.username }}
							!
						</span>
						<a href="{{ path('app_logout') }}" class="ml-4 text-red-500 hover:text-red-700">
							Logout
						</a>
					{% else %}
						<a href="{{ path('app_login') }}" class="text-green-600 hover:text-green-800">
							Login
						</a>
						<a href="{{ path('app_register') }}" class="ml-4 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">
							Sign Up
						</a>
					{% endif %}
				</div>
			</div>
		</header>


		{% block body %}
		{% endblock %}
	</body>
</html>
