<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>

		<header class="bg-white shadow-md">
    <div class="container mx-auto flex justify-between items-center p-4">
        <!-- Logo -->
        <a href="{{ path('app_home') }}" class="text-2xl font-bold text-green-700 hover:text-green-800 transition">
            üç≥ MyCookingApp
        </a>

        <!-- Navigation -->
        <nav class="space-x-4">
            <a href="{{ path('app_recipe_index') }}" class="text-gray-700 hover:text-green-600 transition">
                Recipes
            </a>
            <a href="{{ path('app_category_index') }}" class="text-gray-700 hover:text-green-600 transition">
                Categories
            </a>
        </nav>

        <!-- Authentication -->
        <div class="flex items-center space-x-4">
            {% if app.user %}
                <span class="text-gray-700">
                    Welcome, <span class="font-semibold text-green-700">{{ app.user.username }}</span>
                </span>
                <a href="{{ path('app_logout') }}" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition shadow-md">
                    Logout
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-green-600 hover:text-green-800 transition">
                    Login
                </a>
                <a href="{{ path('app_register') }}" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition shadow-md">
                    Sign Up
                </a>
            {% endif %}
        </div>
    </div>
</header>



		{% block body %}
		{% endblock %}
	</body>
</html>
