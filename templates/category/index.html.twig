{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-6 py-8">
        <!-- Page Header -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-green-700">Categories</h1>
        </div>

        <!-- Categories Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for category in categories %}
                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="block bg-green-100 p-3 rounded-lg shadow-md text-center hover:bg-green-200">
                    <h3 class="text-xl font-semibold text-green-700">
                        {{ category.name }}
                    </h3>
                </a>
            {% else %}
                <p class="text-gray-500 col-span-full text-center">No categories found.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
